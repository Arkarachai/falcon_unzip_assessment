{
  "name": "falcon_unzip_evaluation",
  "title": "Falcon-Unzip evaluation",
  "summary": "Evaluate phasing accuracy of Falcon-Unzip",
  "dxapi": "1.0.0",
  "version": "1.0.0",
  "inputSpec": [
    {
      "name": "trio_genotype_vcfgz",
      "class": "file",
      "label": "GenotypeGVCFs",
      "optional": false,
      "patterns": ["*.vcf.gz"],
      "help": "Generated by Sentieon GVCFtyper or GATK's GenotypeGVCFs."
    },
    {
      "name": "primary_contigs_nucmer",
      "label": "SNPs of primary contigs from nucmer",
      "class": "file",
      "optional": false,
      "patterns": ["*.snps"],
      "help": "Generated by mummer_nucmer_aligner."
    },
    {
      "name": "haplotype_contigs_nucmer",
      "label": "SNPs of haplotigs from nucmer",
      "class": "file",
      "optional": false,
      "patterns": ["*.snps"],
      "help": "Generated by mummer_nucmer_aligner."
    },
    {
      "name": "intermediate_results",
      "label": "Get all intermediate results?",
      "class": "boolean",
      "optional": false,
      "default": true,
      "help": "Select this to get all intermediated results."
    }
  ],
  "outputSpec": [
    {
      "name": "informative_snps",
      "label": "All informaitve SNPs",
      "class": "file",
      "patterns": ["*"],
      "help": ""
    },
    {
      "name": "filtered_informative_snps",
      "label": "Table of filtered haplotigs and informative SNPs",
      "class": "file",
      "patterns": ["filtered_informative_snps"],
      "help": ""
    },
    {
      "name": "haplotig_evaluation_table",
      "label": "Tab delim showing evaluated contigs",
      "class": "file",
      "patterns": ["*"],
      "help": ""
    },
    {
      "name": "intermediate_results",
      "label": "Other intermediated results",
      "class": "array:file",
      "patterns": ["*"],
      "optional": true,
      "help": "(Optional) Get all ntermediated results."
    }
  ],    
  "runSpec": {
    "timeoutPolicy": {"*": {"hours": 12}},
    "interpreter": "bash",
    "file": "src/code.sh",
    "distribution": "Ubuntu",
    "release": "14.04"
  },
  "regionalOptions": {
    "aws:us-east-1": {"systemRequirements": {"*": {"instanceType": "mem1_ssd1_x4"}}}
  }
}
